<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AccountFragment"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_logo_2"
        tools:ignore="ContentDescription" />


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:id="@+id/txtProfile"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textColorHint="@color/black"
        android:gravity="center"
        android:drawablePadding="16dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:text="@string/my_profile"
        android:textAlignment="viewStart"
        android:drawableEnd="@drawable/ic_arrow"
        tools:ignore="RtlCompat"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtProfile"
        android:id="@+id/txtMyCars"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textColorHint="@color/black"
        android:gravity="center"
        android:drawablePadding="16dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:text="@string/mycars"
        android:textAlignment="viewStart"
        android:drawableEnd="@drawable/ic_arrow"
        tools:ignore="RtlCompat" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtChangePassword"
        android:id="@+id/txtMyTestDrive"
        android:layout_marginTop="16dp"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textColorHint="@color/black"
        android:drawablePadding="16dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:text="@string/my_test_drive"
        android:gravity="center"
        android:textAlignment="viewStart"
        android:drawableEnd="@drawable/ic_arrow"
        tools:ignore="RtlCompat"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtMyTestDrive"
        android:id="@+id/txtAboutUs"
        android:layout_marginTop="16dp"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textColorHint="@color/black"
        android:drawablePadding="16dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:text="@string/about_us"
        android:gravity="center"

        android:textAlignment="viewStart"
        android:drawableEnd="@drawable/ic_arrow"
        tools:ignore="RtlCompat"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtMyCars"
        android:id="@+id/txtChangePassword"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textColorHint="@color/black"
        android:drawablePadding="16dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:text="Change Password"
        android:gravity="center"
        android:textAlignment="viewStart"
        android:drawableEnd="@drawable/ic_arrow"
        tools:ignore="RtlCompat"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAboutUs"
        android:id="@+id/txtLogOut"
        android:layout_marginTop="16dp"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textColorHint="@color/black"
        android:drawablePadding="16dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:text="@string/log_out"
        android:gravity="center"

        android:textAlignment="viewStart"
        android:drawableEnd="@drawable/ic_arrow"
        tools:ignore="RtlCompat"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:text="@string/log_out"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>