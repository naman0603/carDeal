<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.InfoSpecificationFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:paddingBottom="20dp"
        >


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="@string/price_range"
               android:padding="16dp"
               android:textSize="18sp"
               android:gravity="start"
               android:textColor="@color/app_theme"/>

           <TextView
               android:id="@+id/txtPriceRange"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:gravity="end"
               android:padding="16dp"
               android:text="@string/car_price"
               android:textColor="@color/black"
               android:textSize="18sp" />
       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/transmission"
                android:padding="16dp"
                android:textSize="18sp"
                android:gravity="start"
                android:textColor="@color/app_theme"/>

            <TextView
                android:id="@+id/txtTransmission"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="16dp"
                android:text="@string/car_price"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/fuel_type"
                android:padding="16dp"
                android:textSize="18sp"
                android:gravity="start"
                android:textColor="@color/app_theme"/>

            <TextView
                android:id="@+id/txtFuelType"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:padding="16dp"
                android:text="@string/car_price"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/body_type"
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:textColor="@color/app_theme"/>

                <TextView
                    android:id="@+id/txtType"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="16dp"
                    android:text="@string/car_price"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/engine"
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:textColor="@color/app_theme"/>

                <TextView
                    android:id="@+id/txtEngine"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="16dp"
                    android:text="@string/car_price"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mileage"
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:textColor="@color/app_theme"/>

                <TextView
                    android:id="@+id/txtMileage"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="16dp"
                    android:text="@string/car_price"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/seating_capacity"
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:textColor="@color/app_theme"/>

                <TextView
                    android:id="@+id/txtSeat"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="16dp"
                    android:text="@string/car_price"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/fuel_capacity"
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:textColor="@color/app_theme"/>

                <TextView
                    android:id="@+id/txtFuelCapacity"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="16dp"
                    android:text="@string/car_price"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/length_mm"
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:textColor="@color/app_theme"/>

                <TextView
                    android:id="@+id/txtLength"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="16dp"
                    android:text="@string/car_price"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/width_mm"
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:textColor="@color/app_theme"/>

                <TextView
                    android:id="@+id/txtWidth"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="16dp"
                    android:text="@string/car_price"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/height_mm"
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:textColor="@color/app_theme"/>

                <TextView
                    android:id="@+id/txtHeight"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="16dp"
                    android:text="@string/car_price"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>
    </LinearLayout>
</ScrollView>